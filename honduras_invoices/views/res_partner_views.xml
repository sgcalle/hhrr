<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_res_partner_school_fields_form_view">
        <field name="name">view_res_partner_school_fields_form_view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Finance" attr="{'invisible': [('is_family', '=', True)]}">
<!--                     <group attr="{'invisible': [('person_type', '!=', 'student')]}"> -->
                    <group invisible="1"> 
                        <field name="financial_res_ids" widget="many2many_checkboxes" domain='["&amp;", ("id", "in", member_ids), ("person_type", "!=", "student")]'/>
                        <field name="invoice_address_id" domain='["&amp;", ("id", "in", member_ids), ("person_type", "!=", "student")]'/>
                    </group>
                    <group>
                        <field name="family_res_finance_ids" domain='[("family_id", "in", family_ids)]'>
                            <tree editable="bottom">
                                <field name="family_id"/>
                                <field name="category_id"/>
                                <field name="percent"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>