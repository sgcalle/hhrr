<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="view_languages_tree">
        <field name="name">Languages tree</field>
        <field name="model">adm.language</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_language_levels_tree">
        <field name="name">Language levels tree</field>
        <field name="model">adm.language.level</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_degree_program_tree">
        <field name="name">Degree Program tree</field>
        <field name="model">adm.degree_program</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_contact_time_tree">
        <field name="name">Contact time tree</field>
        <field name="model">adm.contact_time</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
                <field name="from_time" widget="float_time" />
                <field name="to_time" widget="float_time" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_contact_time_form">
        <field name="name">Contact time tree</field>
        <field name="model">adm.contact_time</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="from_time" widget="float_time" />
                        <field name="to_time" widget="float_time" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>