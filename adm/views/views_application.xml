<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="admission_application_kanban">
        <field name="name">Application Kanban</field>
        <field name="model">adm.application</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status_id" edit="false" class="o_kanban_small_column o_kanban_project_tasks" disable_drag_drop_record="true" disable_sort_column="true">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_semantic_html_override oe_kanban_card">
                            <div t-attf-class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name" />
                                        </strong>
                                        <br />
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <a role="button" class="dropdown-toogle o-no-caret btn" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v" />
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                            <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                    <script></script>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.ui.view" id="view_application_status_tree">
        <field name="name">Status Tree</field>
        <field name="model">adm.application.status</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id" />
                <field name="name" />
                <field name="sequence" widget="handle" />
            </tree>
        </field>
    </record>

    <!--Form View for inquiries -->
    <record model="ir.ui.view" id="view_application_form">
        <field name="name">Application Form</field>
        <field name="model">adm.application</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status_type" attrs="{'invisible': 1}" />
                    <button name="move_to_next_status" string="NEXT STATUS" type="object" class="btn-primary oe_read_only" attrs="{'invisible': [('status_type', '!=', 'stage')]}" />
                    <button name="cancel" string="CANCEL" type="object" class="btn-danger oe_read_only" attrs="{'invisible': [('status_type', '=', 'cancelled')]}" />

                    <button name="force_back" string="FORCE BACK STATUS" type="object" class="btn-warning oe_read_only" />
                    <button name="force_next" string="FORCE NEXT STATUS" type="object" class="btn-warning oe_read_only" />

                    <field name="status_id" widget="statusbar" options="{'fold_field': 'fold'}" />
                </header>
                <sheet>
                    <group>
                        <h1>
                            <field name="name" force_save="1" />
                        </h1>
                        <field name="preferred_degree_program" />
                        <field name="partner_id" />
                        <group colspan="1">
                            <field name="first_name" />
                            <field name="middle_name" />
                            <field name="last_name" />
                            <field name="contact_time_id" />
                        </group>
                        <group colspan="1">
                            <field name="gender" />
                            <field name="father_name" />
                            <field name="mother_name" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Tasks">
                            <field name="state_tasks" attrs="{'invisible': True}" />
                            <field name="task_ids" widget="many2many_checkboxes" domain="[('id', 'in', state_tasks)]" />
                        </page>
                        <page string="Contact">
                            <group>
                                <field name="email" widget="email" />
                                <field name="phone" />
                                <field name="other_contacts_ids">
                                    <tree editable="bottom">
                                        <field name="contact_name" />
                                        <field name="contact_identification" />
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Location">
                            <group>
                                <label for="street" string="Address" />
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street" />
                                    <field name="city" placeholder="City" class="o_address_city" />
                                    <field name="state_id" class="o_address_state" placeholder="State" domain="[('country_id', '=', country_id)]" />
                                    <field name="zip" placeholder="ZIP" class="o_address_zip" />
                                    <field name="country_id" placeholder="Country" class="o_address_country" />
                                </div>
                            </group>
                        </page>
                        <page string="School Information">
                            <group>
                                <field name="current_school" />
                                <field name="previous_school" />
                                <field name="gpa" />
                                <field name="cumulative_grades" />
                                <field name="regional_exam_grade" />
                                <field name="bac_grade" />
                            </group>
                        </page>
                        <page string="Language Skills">
                            <field name="language_ids">
                                <tree editable="bottom">
                                    <field name="language_id" />
                                    <field name="language_level_id" />
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="language_id" />
                                            <field name="language_level_id" />
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page string="Documentation">
                            <group>
                                <group col="1">
                                    <field name="letter_of_motivation_id" />
                                    <field name="cv_id" />
                                </group>
                                <group col="1">
                                    <field name="grade_transcript_id" />
                                    <field name="letters_of_recommendation_id" />
                                </group>
                            </group>
                        </page>
                        <page string="Siblings">
                            <field name="sibling_ids" />
                        </page>
                        <page string="Previous School">
                            <field name="previous_school_ids" />
                        </page>
                        <page string="Additional student information">
                            <group>
                                <field name="resident_status" />
                                <field name="resident_length_of_stay" />

                                <field name="first_language" />
                                <field name="first_language_skill_write" />
                                <field name="first_language_skill_read" />
                                <field name="first_language_skill_speak" />
                                <field name="first_language_skill_listen" />

                                <field name="second_language" />
                                <field name="second_language_skill_write" />
                                <field name="second_language_skill_read" />
                                <field name="second_language_skill_speak" />
                                <field name="second_language_skill_listen" />

                                <field name="third_language" />
                                <field name="third_language_skill_write" />
                                <field name="third_language_skill_read" />
                                <field name="third_language_skill_speak" />
                                <field name="third_language_skill_listen" />

                                <field name="number_years_in_english" />
                                <field name="additional_info_other" />
                                <field name="special_education" />
                                <field name="special_education_desc" />
                                <field name="psycho_educational_testing" />
                                <field name="emotional_support" />
                                <field name="emotional_support_desc" />
                                <field name="iep_education" />
                            </group>
                        </page>
                        <page string="Relationships">
                            <field name="relationship_ids">
                                <tree>
                                    <field name="partner_2" />
                                    <field name="relationship_type" />
                                </tree>
                                <form>
                                    <group>
                                        <field name="partner_2" />
                                        <field name="relationship_type" />
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Medical information">
                            <group>
                                <field name="doctor_name" />
                                <field name="doctor_phone" />
                                <field name="permission_to_treat" />
                                <field name="medical_conditions_ids">
                                    <tree editable="bottom">
                                        <field name="name" />
                                        <field name="comment" />
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="name" />
                                            <field name="comment" />
                                        </group>
                                    </form>
                                </field>
                                <field name="medical_allergies_ids">
                                    <tree editable="bottom">
                                        <field name="name" />
                                        <field name="comment" />
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="name" />
                                            <field name="comment" />
                                        </group>
                                    </form>
                                </field>
                                <field name="medical_medications_ids">
                                    <tree editable="bottom">
                                        <field name="name" />
                                        <field name="comment" />
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="name" />
                                            <field name="comment" />
                                        </group>
                                    </form>
                                </field>
                            </group>
                        </page>
                        <page string="References">
                            <group col="2">
                                <group colspan="1"><field name="isp_community_reference_1" /></group>
                                <group colspan="1"><field name="isp_community_reference_2" /></group>
                            </group>
                            <group col="2">
                                <group colspan="1"><field name="personal_reference_contact_information_1" /></group>
                                <group colspan="1"><field name="personal_reference_name_1" /></group>
                            </group>
                            <group col="2">
                                <group colspan="1"><field name="personal_reference_contact_information_2" /></group>
                                <group colspan="1"><field name="personal_reference_name_2" /></group>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter" modifiers="{}">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}" />
                </div>

            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_application_status_form">
        <field name="name">Application status Form</field>
        <field name="model">adm.application.status</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                    </group>
                    <group>
                        <group colspan="1">
                            <field name="fold" />
                        </group>
                        <group colspan="1">
                            <field name="type_id" widget="radio" />
                        </group>
                    </group>
                    <group>
                        <notebook>
                            <page string="Tasks">
                                <field name="task_ids">
                                    <tree editable="bottom">
                                        <field name="name" />
                                        <field name="description" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>