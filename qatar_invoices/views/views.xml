<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_company_form_inherit_base" model="ir.ui.view">
        <field name="name">res.company.view.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <field name="logo" position="after">
                <field name="vertical_logo" widget="image" class="oe_avatar"/>
            </field>
            <field name="partner_id" position="after">
                <field name="hr_officer"/>
                <field name="director_of_hr"/>
            </field>
        </field>
    </record>

</odoo>
